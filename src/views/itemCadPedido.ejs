<% if(pedido._id) { %>
  <div class="list-group w-auto my-2">
    <div class="list-group-item d-flex py-1">
      <div class="d-flex row w-100 justify-content-between">
        
          <form class="row g-2" action="/itemPedido/register" method="POST">
            <input type="hidden" name="idPedido" value="<%= pedido._id %>">
            <input type="hidden" name="numPedido" value="<%= pedido.numPedido %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      
            <div class="row g-2">
              <div class="col-sm-2">
                <label class="form-label">Codigo</label>
                <input type="text" value="" class="form-control" name="prodCod" id=prodCod>
              </div>
              
              <div class="col-sm-6">
                <label class="form-label">Produto</label>
                <input type="text" class="form-control" name="prodNome" id="prodNome">
              </div>
              
            </div>
    
            <div class="row g-1">
              <div class="col-sm-2">
                <label class="form-label">Unidade</label>
                <input type="text" class="form-control" name="prodUnid" id="prodUnid">
              </div>
              
              <div class="col-sm-2">
                <label class="form-label">Quant</label>
                <input type="number" class="form-control" name="prodQuant" id="prodQuant">
              </div>
    
              <div class="col-sm-2">
                <label class="form-label">Peso Liq.</label>
                <input type="number" class="form-control" name="prodPesoLiq" id="prodPesoLiq">
              </div>
              
              <div class="col-sm-2">
                <label class="form-label">Peso Bruto</label>
                <input type="number" class="form-control" name="prodPesoBrut" id="prodPesoBrut">
              </div>
              
              <div class="col-sm-2">
                <label class="form-label">Valor Unit.</label>
                <input type="number" class="form-control" name="prodVlUnit" id="prodVlUnit">
              </div>
              
              <div class="col-sm-2">
                <label class="form-label">Valor Total</label>
                <input type="number" class="form-control" name="prodVlTot" id="prodVlTot">
              </div>
    
            </div>
    
            <div class="d-flex g-4 justify-content-end">
              <% if(pedido._id) { %>
                  <button type="submit" class="btn btn-primary">Incluir produto</button>
              <% } else { %>
                  <button type="submit" class="btn btn-primary">Criar Pedido</button>
              <% } %> 
            </div>
            
          </form>
      </div>      
    </div>
  </div>

<% } %>

<% if(pedido._id) { %>
  <div class="list-group w-auto">
    <a class="list-group-item d-flex gap-3 py-3" aria-current="true">
      <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
        <h3 class=" ">Itens do pedido</h3>
        </div>
      </div>
    </a>
  
    <% if( itemPedido.length > 0) { %>
      <% itemPedido.forEach(cont1 =>{ %>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0"><%= cont1.prodCod %> - <%= cont1.prodNome %> </h6>
            
              <div class="row justify-content-around">
                
                <div class="col-sm-2">
                  <p class="mb-0 opacity-75 text-nowrap">Quantidade</p>
                  <p class="mb-0 opacity-75 text-nowrap"><%= cont1.prodQuant %> </p>
                </div>
                
                <div class="col-sm-2">
                  <p class="mb-0 opacity-75 text-nowrap">Valor Unit.</p>
                  <p class="mb-0 opacity-75 text-nowrap"><%= cont1.prodVlUnit %></p>
                </div>
  
                <div class="col-sm-2">
                  <p class="mb-0 opacity-75 text-nowrap">Valor Total</p>
                  <p class="mb-0 opacity-75 text-nowrap"><%= cont1.prodVlTot %></p>
                </div>
  
                <div class="col-sm-2">
                  <p class="mb-0 opacity-75 text-nowrap">Total Peso Liq</p>
                  <p class="mb-0 opacity-75 text-nowrap"><%= cont1.prodVlUnit %></p>
                </div>
                
                <div class="col-sm-2">
                  <p class="mb-0 opacity-75 text-nowrap">Total Peso Bruto</p>
                  <p class="mb-0 opacity-75 text-nowrap"><%= cont1.prodVlUnit %></p>
                </div>            
              </div>  
            </div>
            <small class="opacity-50 text-nowrap"><%= cont1.prodUnid %></small>
          </div>
        </a>
              
      <% }); %>  
  
    <% } else { %>
      <a class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <div class="d-flex gap-2 w-100 justify-content-between">
          <p class="text-center lead">Não existem Produto cadastrados</p>
        </div>
      </a>
    <% } %>
  
  </div>

<% } else { %>

  <a class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
    <div class="d-flex gap-2 w-100 justify-content-between">
      <p class="text-center lead">Não existem Produto cadastrados</p>
    </div>
  </a>

  <% } %>


    




