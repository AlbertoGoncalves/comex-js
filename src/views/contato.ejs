<%- include('includes/head'); %>
<%- include('includes/sidebars'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages'); %>

      <div class="responsive-table">
        <% if(contato._id) { %>
          <form class="row g-3" action="/contato/edit/<%= contato._id %>" method="POST">
        <% } else { %>
          <form class="row g-3" action="/contato/register" method="POST">
        <% } %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
          </div>
          <div class="col-md-6">
            <label class="form-label">Sobrenome</label>
            <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
          </div>
          <div class="col-md-6">
            <label class="form-label">E-mail</label>
            <input value="<%= contato.email %>" type="text" class="form-control" name="email">
          </div>
          <div class="col-md-6">
            <label class="form-label">Telefone</label>
            <input value="<%= contato.telefone %>" type="text" class="form-control" name="telefone">
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
          </div>
        </form>



      </div>
    
    </div>

  </div>

</div>

<%- include('includes/footer'); %> 