<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Pedido</h1>
      <p class="text-center lead">Seus Pedido estão abaixo</p>

      <%- include('includes/messages'); %>
      
      <div class="text-center col-12">
        <td><a href="/pedido/cadastro" class="btn btn-primary">Add Pedido</a></td>
      </div>

      <% if( pedido.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <% pedido.forEach(cont =>{ %>
            
            <tr>
              <td><%= cont.numPedido %></td>
              <td><%= cont.codCli %></td>
              <td><%= cont.cliente %></td>
              <td><%= cont.dtPedido %></td>
              <td><%= cont.moedCiente %></td>

              
              <div class="col-12">
                <td><a href="/pedido/cadastro/<%= cont._id %>" class="btn btn-primary">Editar</a></td>
                <td><a href="/pedido/delete/<%= cont._id %>" class="btn text-danger">Excluir</a></td>
              </div>
            </tr>          
          <% }); %>  

        </table>
      </div>
      <% } else { %>

        <p class="text-center lead">Não existem Produto cadastrados</p>

      <% } %>
    
    </div>

    <% if( pedido.length > 8) { %>
      <div class="text-center col-12">
        <td><a href="/pedido/cadastro" class="btn btn-primary">Add Produto</a></td>
      </div>
    <% } %>

  </div>

</div>

